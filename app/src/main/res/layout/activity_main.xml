<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <takp.nedearb.underneath.GameSurfaceView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameSurfaceView"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="7">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use"
                android:id="@+id/buttonUse"
                android:layout_row="2"
                android:layout_column="0"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam"
                android:id="@+id/buttonExam"
                android:layout_row="1"
                android:layout_column="0"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Walk"
                android:id="@+id/buttonAutoWalk"
                android:layout_row="1"
                android:layout_column="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inv"
                android:id="@+id/buttonInv"
                android:layout_row="1"
                android:layout_column="2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up"
                android:id="@+id/buttonUp"
                android:layout_row="1"
                android:layout_column="3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escape"
                android:id="@+id/buttonEscape"
                android:layout_row="1"
                android:layout_column="4"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wait"
                android:id="@+id/buttonWait"
                android:layout_row="2"
                android:layout_column="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left"
                android:id="@+id/buttonLeft"
                android:layout_row="2"
                android:layout_column="2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter"
                android:id="@+id/buttonEnter"
                android:layout_row="2"
                android:layout_column="3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2ndAtk"
                android:id="@+id/buttonSecondAtk"
                android:layout_row="3"
                android:layout_column="0"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heal"
                android:id="@+id/buttonHeal"
                android:layout_row="3"
                android:layout_column="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:id="@+id/buttonSkills"
                android:layout_row="3"
                android:layout_column="2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Down"
                android:id="@+id/buttonDown"
                android:layout_row="3"
                android:layout_column="3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right"
                android:id="@+id/buttonRight"
                android:layout_row="2"
                android:layout_column="4"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AdjBord"
                android:id="@+id/buttonAdjBord"
                android:layout_row="3"
                android:layout_column="4"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SortInv"
                android:id="@+id/buttonSortInv"
                android:layout_row="4"
                android:layout_column="0"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TrItem"
                android:id="@+id/buttonTranItem"
                android:layout_row="4"
                android:layout_column="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DrItem"
                android:id="@+id/buttonDropItem"
                android:layout_row="4"
                android:layout_column="2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EqpItem"
                android:id="@+id/buttonEquipItem"
                android:layout_row="4"
                android:layout_column="3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key"
                android:id="@+id/buttonKeyboard"
                android:layout_row="4"
                android:layout_column="4"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TrStk"
                android:id="@+id/buttonTranStack"
                android:layout_row="5"
                android:layout_column="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DrStk"
                android:id="@+id/buttonDropStack"
                android:layout_row="5"
                android:layout_column="2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EqpPrim"
                android:id="@+id/buttonEquipPrime"
                android:layout_row="5"
                android:layout_column="3"/>

        </GridLayout>
    </LinearLayout>

</RelativeLayout>
